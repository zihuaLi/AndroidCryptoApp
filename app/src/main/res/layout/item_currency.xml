<?xml version=".0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 货币名称 -->
    <TextView
        android:id="@+id/textViewCurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Name"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <!-- 1小时价格变化 -->
    <TextView
        android:id="@+id/textViewChange1h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h Change: 0.0%"
        android:textAppearance="?attr/textAppearanceBody1" />

    <!-- 24小时价格变化 -->
    <TextView
        android:id="@+id/textViewChange24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24h Change: 0.0%"
        android:textAppearance="?attr/textAppearanceBody1" />

    <!-- 7天价格变化 -->
    <TextView
        android:id="@+id/textViewChange7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7d Change: 0.0%"
        android:textAppearance="?attr/textAppearanceBody1" />

</LinearLayout>
